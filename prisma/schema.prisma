generator client {
  provider = "prisma-client-js"
  previewFeatures = ["omitApi"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  SUPER_ADMIN
}

model User {
  id Int @id @db.Integer @default(autoincrement()) @unique
  name String @db.VarChar(100)
  email String @db.VarChar(100) @unique
  password String @db.VarChar(100)
  accessRole Role @default(ADMIN)
  accessToken String? @db.VarChar(255)
  refreshToken String? @db.VarChar(255)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders Order[]

  @@map("users")
}

enum Status {
  BELUM
  SEDANG_DIKERJAKAN
  SELESAI
}

model Order{
  id Int @id @db.Integer @default(autoincrement())
  title String @db.VarChar(100)
  date DateTime @db.Timestamp()
  address String @db.VarChar(100)
  service String @db.VarChar(100)
  price Int @db.Integer
  status Status @default(BELUM)
  picId Int @db.Integer
  pic User @relation(fields: [picId], references: [id])
  
  @@map("orders")
}

enum Avail {
  AVAILABLE
  NON_AVAILABLE
}

model Service{
  id Int @id @db.Integer @default(autoincrement()) @unique
  title String @db.VarChar(100) @unique
  price Int @db.Integer
  desc String @db.VarChar(256)
  status Avail @default(AVAILABLE)

  @@map("services")
}

model Worker {

  id Int @id @db.Integer @default(autoincrement()) @unique
  name String @db.VarChar(100)
  email String @db.VarChar(100) @unique
  alamat String @db.VarChar(100)

  @@map("worker")
}